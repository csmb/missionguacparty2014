<h1 class="cover-heading">Mission Guac Party!</h1>

<form class="form-horizontal lead" role="form" action="/" method="post">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="name">Name</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="name" placeholder="Guac King">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="name">Email</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="email" placeholder="guac-lover@gmail.com">
    </div>
  </div>
  <div class="form-group">
    <label for="guac">Guac</label>
    <input type="checkbox" name="guac">
  </div>
  <div class="form-group">
    <label for="beer">Beer</label>
    <input type="checkbox" name="beer">
  </div>
  <div class="form-group">
    <label for="other">Other</label>
    <input type="checkbox" name="other">
  </div>
  <button type="submit" class="btn btn-lg btn-success">Submit</button>
</form>
